{% extends 'base.html.twig' %}

{% block title %}Hello UserProfileController!{% endblock %}

{% block body %}
    <div class="container">
        {% for ticket in tickets %}
            <div class="card w-75 mx-auto my-2">
                <div class="px-3 d-flex flex-row align-items-center justify-content-between">
                    <div class="alert alert-dark my-auto">
                        <h2>{{ ticket.trip.route }}</h2>
                    </div>

                    <div class="alert my-auto">
                        <h5>Время отправления: <span class="lead"><span class="badge badge-info"> {{ ticket.trip.departureTime|date('H:i') }}</span></span></h5>
                        <h5>Время прибытия: <span class="lead"><span class="badge badge-info"> {{ ticket.trip.arrivalTime|date('H:i') }}</span></span></h5>
                    </div>

                    <div>
                        <span class="lead"><span class="badge badge-primary">Цена: {{ ticket.trip.price/100|number_format }} руб. </span></span>
                    </div>
                </div>
                <div class="card-footer">

                    <div class="d-flex flex-row justify-content-between align-items-center">
                       <div>Дата и время покупки: {{ ticket.saleDatetime|date('d.m.y H:i') }}</div>
                        <div>Дата поездки: {{ ticket.tripDate|date('d.m.y') }}</div>
                    </div>

                </div>
            </div>
        {% endfor %}
    </div>
{% endblock %}
